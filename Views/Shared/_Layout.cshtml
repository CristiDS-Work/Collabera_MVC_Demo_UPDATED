@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sitecore Powered Blog - @ViewBag.Title</title>

    @Styles.Render("~/Content/css/bootstrap")

    @Scripts.Render("~/Scripts/default")
    @Scripts.Render("~/Scripts/bootstrap")
    @Scripts.Render("~/Scripts/jquery")
</head>
<body>
    <header>
        <div class="container">
            <div class="jumbotron text-white bg-primary">
                <h1 class="display-3">Sitecore Powered Blog - @ViewBag.Title</h1>
                <p class="lead"><a href="https://jss.sitecore.com/" class="text-light">Sitecore</a> promises to be the way of the future.</p>
            </div>
        </div><!-- /.container -->
    </header>

    <div class="container body-content">
        @RenderBody()
    </div>

    <Footer>
        <div class="container">
            <div class="text-white bg-primary">
                <p class="lead">Copyright @DateTime.Now.Year</p>
            </div>
        </div>
    </Footer>
</body>
</html>