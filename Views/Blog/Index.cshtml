@model SitecorePoweredBlog.Models.Blog

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    @{ ViewBag.Title = "Blog"; }
</head>

<body>
    <main role="main" class="container blog-post-detail">
        <div class="row">
            <div class="blog-post-detail-card card col-lg-12">
                <img class="card-img-top" src="../../content/images/@Model.BigImage" alt="Card image cap">
                <div class="card-body bg-light">
                    <strong class="d-inline-block mb-2 text-success">@Model.Category</strong>
                    <h3 class="card-title">@Model.Title</h3>
                    <div class="mb-1 text-muted">@Model.Date.ToString("MMM d, yyyy")</div>
                    @Html.Raw(Model.LongText)

                    
                <div class="blog-detail-tag-list">
                    <span class="read-more-heading">Read more: </span>
                    @{
                        string[] tags = Model.Tags.Split('|');
                    }
                    @foreach (string tag in tags)
                    {
                        <a class="btn btn-info" href="#" role="button">@tag</a>
                    }
                </div>
                </div>
            </div>
        </div>
    </main>
</body>

</html>